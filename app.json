{
  "expo": {
    "name": "Xsite",
    "slug": "site_Ex",
    "owner": "codewithrushi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "xsite",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.codewithrushi.xsite",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "package": "com.codewithrushi.xsite",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/images/icon.png",
        "backgroundImage": "./assets/images/images/splash.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#3B82F6",
          "sound": "default",
          "androidMode": "default",
          "androidCollapsedTitle": "#{unread_notifications} new notifications from Xsite",
          "enableBackgroundRemoteNotifications": true,
          "iosDisplayInForeground": true,
          "androidNotificationChannels": [
            {
              "id": "default",
              "name": "Default notifications",
              "importance": 4,
              "bypassDnd": false,
              "description": "General app notifications",
              "enableLights": true,
              "enableVibration": true,
              "lightColor": "#3B82F6",
              "lockscreenVisibility": 1,
              "showBadge": true,
              "sound": "default",
              "vibrationPattern": [0, 250, 250, 250]
            },
            {
              "id": "project-updates",
              "name": "Project Updates",
              "importance": 4,
              "bypassDnd": false,
              "description": "Material, labor, and project activity notifications",
              "enableLights": true,
              "enableVibration": true,
              "lightColor": "#10B981",
              "lockscreenVisibility": 1,
              "showBadge": true,
              "sound": "default",
              "vibrationPattern": [0, 250, 250, 250]
            }
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan QR codes for staff assignment."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to upload QR code images."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2fcc4ccc-b8b5-4ff4-ae3c-b195aa9eb32f"
      }
    }
  }
}
